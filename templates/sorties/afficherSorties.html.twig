{%  extends "base.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}
{%  block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="css/app.css">
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="col-md-10"></div>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <p>Date du jour : {{"now"|date("d/m/Y") }}</p>
            <p>Participant : {{ app.user.pseudo }}</p>
    {% endif %}
    </div>



    <div class="col-md-2">
    </div>


    <h2 class="mb-4">Filtrer les sorties</h2>

    <label>Site : </label>
    <select id="selectSites">
        {% for site in listeSites %}
            <option>{{ site.nomSite }}</option>
        {% endfor %}
    </select>

    <div class="mt-3">
        <label>Le nom de la sortie contient : </label>
        <input type="text"><input type="button" value="Rechercher">
    </div>

    <div class="mt-3">
        Entre le <input type="date"> et le  <input type="date">
    </div>


    <table class="table table-striped mt-5">
        <thead class="thead-light">
        <tr class="text-center">
            <th scope="col">Nom de la sortie</th>
            <th scope="col">Date de la sortie</th>
            <th scope="col">Clôture</th>
            <th scope="col">Inscrits/Places</th>
            <th scope="col">Etat</th>
            <th scope="col">Inscrit</th>
            <th scope="col">Organisateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for sortie in listeSorties %}
        <tr class="text-center">
            <td>{{ sortie.nom }}</td>
            <td>{{ sortie.datedebut.format("d-M-Y") }}</td>
            <td>{{ sortie.dateclosure.format("d-M-Y") }}</td>
            <td>nbInscrits/{{ sortie.nbinscriptionsmax }}</td>
            <td>{{ sortie.etat.libelle }}</td>
            <td></td>
            <td>{{ sortie.organisateur.prenom }}</td>
            <td>
                <input type="button" value="afficher" class="btn btn-primary">
                <input type="button" value="s'inscrire" class="btn btn-secondary">
                <input type="button" value="se désister" class="btn btn-danger">

            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('sorties_gerer') }}"><button type="button" class="btn btn-dark mt-5" >Créer une sortie</button></a>



{% endblock %}

