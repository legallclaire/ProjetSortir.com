{% extends "base.html.twig" %}

{% block title %}
    Detail | {{ parent() }}
{% endblock %}

{% block main %}
    <h1>Cr√©er une sortie</h1>
    <div class="d-flex justify-content-around">
        <div class="col-3">
            {{ form_start(sortieForm) }}
            {{ form_row(sortieForm.nom) }}
            {{ form_row(sortieForm.datedebut) }}
            {{ form_row(sortieForm.dateclosure) }}
            {{ form_row(sortieForm.nbinscriptionsmax) }}
            {{ form_row(sortieForm.datefin) }}
            {{ form_row(sortieForm.descriptioninfos) }}
        </div>
        <div class="col-3">
            <div class="form-group">
                <label for="villeOrga" class="col-form-label">Ville organisatrice</label>
                <input type="email" class="form-control" id="villeOrga">
            </div>
            <div class="form-group mb-3">
                <label for="villes">Ville</label>
                <select class="custom-select" id="villes">
                    {% for ville in listeVilles %}
                        <option>{{ ville.getNomVille() }}</option>
                    {% endfor %}
                </select>
            </div>
            {{ form_row(sortieForm.lieu) }}
            <div class="form-group">
                <label for="rue" class="col-form-label">Rue</label>
                <input type="text" class="form-control" id="rue">
            </div>
            <div class="form-group">
                <label for="codePostal" class="col-form-label">Code postal</label>
                <input type="text" class="form-control" id="codePostal">
            </div>
            <div class="form-group">
                <label for="lattitude" class="col-form-label">Lattitude</label>
                <input type="text" class="form-control" id="lattitude">
            </div>
            <div class="form-group">
                <label for="longitude" class="col-form-label">Longitude</label>
                <input type="text" class="form-control" id="longitude">
            </div>
        </div>
    </div>
    <div class="buttons mt-3 justify-content-center d-flex">
        <button type="submit" class="btn btn-lg btn-info mr-3">Enregistrer</button>
        <button type="submit" class="btn btn-lg btn-info mr-3">Publier la sortie</button>
        <button type="submit" class="btn btn-lg btn-info mr-3">Annuler</button>
    </div>
        {{ form_end(sortieForm) }}

{% endblock %}