{% extends "base.html.twig" %}

{% block title %}
    Detail | {{ parent() }}
{% endblock %}

{% block main %}
    <h1>Créer une sortie</h1>
    <div class="col-3">
        {{ form_start(sortieForm) }}
        {{ form_widget(sortieForm) }}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="villes">Ville</label>
            </div>
            <select class="custom-select" id="villes">
                {% for ville in listeVilles %}
                    <option>{{ ville.getNomVille() }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-info">Créér</button>
        {{ form_end(sortieForm) }}
    </div>

{% endblock %}