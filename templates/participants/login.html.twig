{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <h2 class="text-center mt-3 mb-3">Connexion</h2>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post" class="col-4 offset-4 mt-5">
        <div class="form-group">
            <label for="username">Identifiant</label>
            <input id="username" type="text" class="form-control" placeholder="Identifiant mail" name="_username"
                   required>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input id="password" type="password" class="form-control" placeholder="Mot de passe" name="_password" required>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-lg btn-info">Se connecter</button>
            <div class="form-check">
                <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input" checked />
                <label for="remember_me" class="form-check-label">Se souvenir de moi</label>
                <div>
                    <a href="#">Mot de passe oubli√©</a>
                </div>
            </div>
        </div>
    </form>
{% endblock %}