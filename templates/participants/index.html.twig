{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <h2 class="text-center mt-3 mb-3">Connexion</h2>

    <form method="post" class="col-4 offset-4 mt-5">
        <div class="form-group">
            <label for="username">Identifiant</label>
            <input id="username" type="text" class="form-control" placeholder="Votre identifiant" name="_username"
                   required>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input id="password" type="password" class="form-control" placeholder="Votre mot de passe" name="_password" required>
        </div>
        <button type="submit" class="btn btn-info">Se connecter</button>
    </form>

{% endblock %}